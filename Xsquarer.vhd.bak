library IEEE;
use IEEE.STD_LOGIC_1164.ALL;
use ieee.std_logic_unsigned.all;
use ieee.std_logic_arith.all ;
------------------------------------------
---- N bit counter ------
------------------------------------------
-- Behavior
--------------------------------------
entity Xsquarer is
generic ( N : integer:=4 );
port ( 
 XCORD: in std_logic_vector(N-1 downto 0);
 XSQ: out std_logic_vector(2*N-1 downto 0);
 
 );
end Xsquarer;


architecture rtl of Xsquarer is
begin
process(XCORD)
begin
 XSQ<=XCORD*XCORD;
 end process;
end rtl;